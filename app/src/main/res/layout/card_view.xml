<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/cv"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    android:layout_margin="3dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:weightSum="1"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.61">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/destino_rutina"
                    android:id="@+id/textView3"
                    android:textStyle="bold"
                    android:layout_weight="0.01" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/direccion_rutina"
                        android:textSize="15sp"
                        android:layout_below="@+id/nombre_rutina"
                        android:layout_marginTop="0dp"
                    android:layout_weight="0.20" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/boton_vista_mapa_rutina"
                        android:background="@mipmap/ic_vista_mapa"
                        android:layout_gravity="right"
                        android:layout_weight="0.01"
                        />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/hora_inicio"
                        android:id="@+id/textView4"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hora_inicio_rutina"
                        android:textSize="15sp"
                        android:layout_below="@+id/direccion_rutina"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.94"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/hora_fin"
                    android:id="@+id/textView5"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hora_fin_rutina"
                    android:textSize="15sp"
                    android:layout_below="@+id/hora_inicio_rutina"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.46"
                    />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/detalle"
                    android:id="@+id/textView2"
                    android:textStyle="bold"
                    android:layout_weight="0.01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nombre_rutina"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:layout_weight="0.20"
                   />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/boton_editar_rutina"
                    android:background="@mipmap/ic_editar_rutina"
                    android:layout_gravity="right"
                    android:layout_weight="0.01"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

